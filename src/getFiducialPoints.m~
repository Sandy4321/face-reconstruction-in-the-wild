function [boundingBoxXYS, confidence, points] = getFiducialPoints(image)
%Get fiducial points of the face
%   Use the existing implementation

% Add the project path
cwd=cd;
addpath([cwd '/../extra/CLASS_facepipe_VJ_29-Sep-08b']);
init;

% Run the function
[DETS,PTS,DESCS]=extfacedescs(opts,image,false);

% Format the outputs
points = PTS;
confidence = DETS(4);
boundingBoxXYS = DETS(1:3);
end
